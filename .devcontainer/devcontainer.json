{
  "name": "cuda-ladder",
  "context": "..",
  "dockerFile": "../infra/docker/Dockerfile.cpp",
  "runArgs": ["--gpus=all"],
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "NVIDIA.nsight-vscode-edition",
        "ms-python.python"
      ],
      "settings": {
        "C_Cpp.default.compilerPath": "/usr/bin/g++",
        "C_Cpp.default.intelliSenseMode": "linux-gcc-x64"
      }
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y git cmake pkg-config python3 python3-pip time && g++ --version && nvcc --version && git --version"
}
